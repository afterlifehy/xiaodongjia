<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_12"
    android:paddingEnd="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_12">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_img"
        android:layout_width="@dimen/dp_123"
        android:layout_height="@dimen/dp_89"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:riv_corner_radius="@dimen/dp_5"
        tools:src="@mipmap/ic_alien" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/riv_img"
        android:layout_alignBottom="@+id/riv_img"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_toEndOf="@+id/riv_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:textColor="@color/color_ff171b20"
            android:textSize="@dimen/sp_16"
            tools:text="飞河地•(水街店)" />

        <TextView
            android:id="@+id/tv_label1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@color/color_ff808a96"
            android:textSize="@dimen/sp_12"
            tools:text="美食 区域第一" />

        <TextView
            android:id="@+id/tv_label2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:textColor="@color/color_ff808a96"
            android:textSize="@dimen/sp_12"
            tools:text="美食 区域第一" />

        <TextView
            android:id="@+id/tv_label3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:textColor="@color/color_ff808a96"
            android:textSize="@dimen/sp_12"
            tools:text="美食 区域第一" />
    </LinearLayout>
</RelativeLayout>