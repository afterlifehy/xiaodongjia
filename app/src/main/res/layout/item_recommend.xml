<?xml version="1.0" encoding="utf-8"?>
<com.aries.ui.view.radius.RadiusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16"
    android:orientation="vertical"
    app:rv_backgroundColor="@color/transparent"
    app:rv_radius="@dimen/dp_8">

    <com.aries.ui.view.radius.RadiusRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        app:rv_backgroundColor="@color/white_bg"
        app:rv_topLeftRadius="@dimen/dp_8"
        app:rv_topRightRadius="@dimen/dp_8">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_head"
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_49"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/dp_25"
            tools:src="@mipmap/ic_alien" />

        <TextView
            android:id="@+id/tv_passport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/riv_head"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toEndOf="@+id/riv_head"
            android:includeFontPadding="false"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            tools:text="111123" />

        <TextView
            android:id="@+id/tv_passportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_passport"
            android:layout_alignStart="@+id/tv_passport"
            android:layout_marginTop="@dimen/dp_6"
            android:includeFontPadding="false"
            android:text="@string/护照号"
            android:textColor="@color/color_ff808a96"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_passport"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_ff808a96"
            android:textSize="@dimen/sp_12"
            tools:text="2020-08-20" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_passportTitle"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_ff171b20"
            android:textSize="@dimen/sp_14"
            tools:text="188****0534" />
    </com.aries.ui.view.radius.RadiusRelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_recommend_dash" />

    <com.aries.ui.view.radius.RadiusLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_15"
        app:rv_backgroundColor="@color/white_bg"
        app:rv_bottomLeftRadius="@dimen/dp_8"
        app:rv_bottomRightRadius="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/收益总额"
            android:textColor="@color/color_ff808a96"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="182938.87" />
    </com.aries.ui.view.radius.RadiusLinearLayout>
</com.aries.ui.view.radius.RadiusLinearLayout>