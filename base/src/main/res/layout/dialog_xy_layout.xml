<?xml version="1.0" encoding="utf-8"?>
<com.aries.ui.view.radius.RadiusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_32"
    app:rv_backgroundColor="@color/white_bg"
    app:rv_radius="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"
        android:gravity="center"
        android:textColor="@color/safe_text_cololr"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        tools:text="title" />

    <TextView
        android:id="@+id/tv_context_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_35"
        android:textColor="@color/color_ff171b20"
        tools:text="这里是辅助说明文字单行" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_left_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂不使用"
                android:textColor="@color/color_ff171b20"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                tools:text="@string/取消" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_reght"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_reght_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"
                android:textColor="#fffbb700"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                tools:text="我知道了" />
        </RelativeLayout>

    </LinearLayout>

</com.aries.ui.view.radius.RadiusLinearLayout>